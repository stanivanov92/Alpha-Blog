<h2><%=@user.name%>'s profile</h2>
<%= gravatar_for @user, size: 250 %>
<div class="containter m3">
  <%if logged_in? && current_user === @user%>
    <%= link_to "Edit your profile", edit_user_path(@user), class: 'btn btn-outline-primary btn-lg m-3'%>
  <%end%>
</div>
<div class="flickr_pagination mb-5 pb-4">
<%= will_paginate @articles, :container => false %>
</div>
<h3 class="text-center mt-4">Articles</h3>
<%=render 'articles/article', obj: @articles%>  
<div id="page-bottom-user-show"></div>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="form-group row m-4 pt-5 pr-5 pl-5">
    <%= f.label :username, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>	
    </div>
  </div>

  <div class="form-group row m-4 pr-5 pl-5 pt-3">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.text_field :email, class: "form-control" %>	
    </div>
  </div>

  <div class="form-group row m-4 pr-5 pl-5 pt-3">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control" %>	
    </div>
  </div>

  <div class="form-group row m-5">
    <div class="col-12 text-center p-3">
      <%= f.submit "Sign up", class: "btn btn-success btn-outline-light btn-lg" %>
    </div>
  </div>
<% end %>
